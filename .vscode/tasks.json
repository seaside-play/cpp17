{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: gcc build active file",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}",
                // "-std=c++11",
                "-I${fileDirname}/sun/earth/*.hpp",
                "-I${fileDirname}/sun/nk/*.hpp",
                "-I${fileDirname}/sun/cpp17/*.hpp",
                "${fileDirname}/sun/cpp17/*.cpp",
                "${fileDirname}/sun/earth/*.cpp",
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}